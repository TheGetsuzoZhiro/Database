<?php
include 'connect.php';

if (isset($_POST['Submit'])) {
    $id_buku      = $_POST['id_buku'];
    $judul_buku   = $_POST['judul_buku'];
    $nomor_isbn   = $_POST['nomor_isbn'];
    $penulis      = $_POST['penulis'];
    $penerbit     = $_POST['penerbit'];
    $tahun_terbit = $_POST['tahun_terbit'];
    $stok         = $_POST['stok'];
    $harga_pokok  = $_POST['harga_pokok'];
    $harga_jual   = $_POST['harga_jual'];
    $diskon   	  = $_POST['diskon'];

    $query = "INSERT INTO buku (id_buku, judul_buku, nomor_isbn, penulis, penerbit, tahun_terbit, stok, harga_pokok, harga_jual, diskon)
              VALUES ('$id_buku', '$judul_buku', '$nomor_isbn', '$penulis', '$penerbit', '$tahun_terbit', '$stok', '$harga_pokok', '$harga_jual', '$diskon')";

    if (mysqli_query($mysqli, $query)) {
        echo "<script>alert('Data Berhasil Disimpan c rdit');</script>";
    } else {
        echo "Error: " . mysqli_error($mysqli);
    }
}
